{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src/",
    "outDir": "dist/js/",
    "strict": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
  },
  "exclude": ["node_modules"]
}
