{
  "manifest_version": 2,
  "name": "Chexxo",
  "description": "",
  "version": "0.1.0",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "./assets/logo.svg",
      "38": "./assets/logo.svg"
    }
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "icons": {
    "16": "./assets/logo.svg",
    "48": "./assets/logo.svg",
    "128": "./assets/logo.svg"
  },

  "content_security_policy": "script-src 'self'; object-src 'self';",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
