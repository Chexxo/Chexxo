{
  "name": "chexxo",
  "version": "0.3.0",
  "description": "Browser extension that allows users to see the certificate quality of websites.",
  "author": "Carlo Kirchmeier, Yannick Vogt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chexxo/Chexxo.git"
  },
  "bugs": {
    "url": "https://github.com/Chexxo/Chexxo/issues"
  },
  "homepage": "https://github.com/Chexxo/Chexxo#readme",
  "scripts": {
    "format": "npx prettier --write ./src/",
    "lint:eslint": "npx eslint ./src/ --max-warnings 0",
    "lint:webext": "npx web-ext lint --source-dir ./dist/",
    "test": "npx jest --verbose --coverage",
    "test:watch": "npx jest --watch",
    "build:chromium:dev": "npx webpack --config webpack.chromium.dev.js",
    "build:chromium:prod": "npx webpack --config webpack.chromium.prod.js",
    "build:firefox:dev": "npx webpack --config webpack.firefox.dev.js",
    "build:firefox:prod": "npx webpack --config webpack.firefox.prod.js",
    "build:dev": "npm run build:chromium:dev && npm run build:firefox:dev",
    "build:prod": "npm run build:chromium:prod && npm run build:firefox:prod",
    "build:watch": "npx webpack --config webpack.chromium.dev.js --watch && npx webpack --config webpack.firefox.dev.js -- watch",
    "build:documentation": "npx typedoc --options ./typedoc.config.js",
    "start": "npx web-ext run --source-dir ./dist/ --browser-console --start-url www.google.com"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "copy-webpack-plugin": "^6.3.0",
    "css-loader": "^5.0.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-tsdoc": "^0.2.6",
    "file-loader": "^6.1.1",
    "jest": "^26.5.3",
    "jest-css-modules-transform": "^4.0.1",
    "mini-css-extract-plugin": "^1.2.1",
    "mockzilla": "^0.8.0",
    "node-sass": "^4.14.1",
    "postcss": "^8.1.2",
    "prettier": "2.1.1",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.3",
    "typedoc": "^0.18.0",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typedoc-plugin-no-inherit": "^1.2.0",
    "typescript": "^4.0.2",
    "typescript-eslint": "0.0.1-alpha.0",
    "web-ext": "^5.2.0",
    "webextension-polyfill-ts": "^0.20.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^4.1.0",
    "webpack-merge": "^5.2.0"
  },
  "dependencies": {
    "byte-base64": "^1.1.0",
    "jsrsasign": "^10.0.5",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.0"
  }
}
